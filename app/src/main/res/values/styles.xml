<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPink</item>
        <item name="colorPrimaryDark">#FFFFFF</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>



    <style name="btnMainStyle" parent="TextAppearance.AppCompat.Widget.Button.Borderless.Colored">

        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">250dp</item>
        <item name="android:background">@drawable/btn_main_style</item>
        <item name="android:layout_marginBottom">16dp</item>
      <item name="fontFamily">sans-serif-condensed</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="labels" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:inputType">textCapSentences</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">35dp</item>
        <item name="android:gravity">center|bottom</item>



    </style>


    <style name="editText" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">16sp</item>

        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>

        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">35dp</item>




    </style>


</resources>